@model WebDACS.Models.Trailer

@{
    ViewBag.Title = "InfoTrailer";
    Layout = "~/Views/Shared/Phu/_InformationPhim.cshtml";
}

<script src="https://code.jquery.com/jquery-3.4.1.min.js">
</script>

<div class="block-wrapper page-single" style="margin-top: 60px; height: 500px;">
    <div class="name">@Html.DisplayFor(model => model.TrailerName)</div>
    <video width="100%" height="400" style="margin-top:40px" controls>
        <source src="@Html.DisplayFor(model =>model.TrailerUrl)" type="video/mp4" />
    </video>
</div>

<style>
    .name {
        font-size: 20px;
        color: red;
        text-align: center;
        text-transform:uppercase;
        margin-top:40px;
        margin-bottom:auto;
    }
    body {
        color: #000;
        font-size: 12px;
        line-height: 1.5em;
        background: url(/Content/Images/Trangchu/body_bg.gif) #6f6d72;
    }
    .block-wrapper {
        position: relative;
        background: #4F4E52 url('/Content/Images/Trangchu/item_bg.gif') repeat;
        border-bottom: 1px solid #868489;
        color: #ddd;
        margin-left: 300px;
        display: block;
    }

    .page-single {
        padding: 10px;
        width: 670px;
    }
</style>
