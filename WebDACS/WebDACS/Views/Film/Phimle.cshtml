@model IEnumerable<WebDACS.Models.Film>
@{
    ViewBag.Title = "Phimle";
    Layout = "~/Views/Shared/Phu/_Indexphimle.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    @foreach (var item in Model)
    {
        <li>
            <a href="InfoPhim/@item.IdFilm" title="@item.NameVN">
                <div class="phimbo-carousel-top-item">
                    <p><img src="@item.Images" alt="@item.NameF" title="@item.NameVN" width="225" height="299" /></p>
                    <div class="phimbo-carousel-top-item-meta">
                        <h3 class="phimbo-name-1"><strong>@item.NameVN</strong></h3>
                        <h4 class="phimbo-name-2"><strong>@item.NameF</strong></h4>
                        <span class="ribbon" style="top:-235px;">Tập 1019/?</span>
                    </div>
                </div>
            </a>
        </li>
    }
</body>
</html>
<style>
    /* Phim bo moi cap nhat */

    .phimbo-movie-list {
        padding: 15px;
        width: 99%;
        margin: auto;
        padding: 10px;
        float: left;
    }

    .phimbo-movie {
        margin: -30px 0px 15px 0px;
    }

    .phimbo-carousel-top-item {
        margin-left: 45px;
        margin-top: 20px;
        width: 225px;
        height: 300px;
        position: relative;
    }

        .phimbo-carousel-top-item img {
            width: 100%;
            border: 2px solid #000;
        }

    .phimbo-carousel-top-item-meta {
        position: absolute;
        bottom: 2px;
        background: rgba(0, 0, 0, 0.8);
        padding: 5px;
        width: 97%;
    }

    .phimbo-name-1 {
        display: block;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        width: 100%;
        color: blue;
        text-transform: uppercase;
        font-size: 14px;
        font-weight: 700;
        text-decoration: none;
        margin: 5px 0px;
    }

    .phimbo-name-2 {
        color: #fff;
        font-size: 12px;
        display: block;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        width: 100%;
        text-decoration: none;
        margin: 5px 0px;
    }

    .phimbo-carousel-top-item img:hover {
        opacity: 0.7;
        width: 100%;
    }

    .phimbo-carousel-top-item:hover .movie-name-1 {
        color: #dacb46;
    }

    .phimbo-carousel-top li {
        margin-right: 17px;
    }
</style>
