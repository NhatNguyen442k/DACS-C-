@model WebDACS.Models.ViewModel.SetCategoriesViewModel

@{
    ViewBag.Title = "SetTL";
    Layout = "~/Views/Shared/Phu/_AdminPage.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <strong style="font-size:20px;color:white">
            SET THỂ LOẠI CHO PHIM:
        </strong>
        <strong style="">
            @Html.DropDownListFor(model => model.Idgory, new SelectList(Model.Categories, "IdGory", "Namegory"), "Chọn thể loại", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Idgory, "", new { @class = "text-danger" })
        </strong>
    </div>

    <div class="form-group " style="margin-top: 40px;">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("TRỞ VỀ", "ControlPhim", null, new { @class = "back" }) |||
            <input type="submit" value="Create" class="btn btn-default" style="font-size:20px;background-color:red" />
        </div>
    </div>
</div>
}
<style>
    .back {
        font-size: 20px;
        margin-left: 40px;
        background-color: red;
        border: 2px solid black;  
    }
</style>

